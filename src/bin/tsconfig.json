{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "outDir": "./build",
        "sourceMap": false
    },
    "include": [
        "src/**/*"
    ]
}